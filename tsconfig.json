{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "es2022"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "esModuleInterop": true,

    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
